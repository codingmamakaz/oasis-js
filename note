<button id="next-button"  data-id="${this.id}">Show next plant</button>
  <div id="next-plants"></div>


  const getPlantsAgain = () => {
  $('button#show-again-button').on('click', (e) => {
    e.preventDefault()
    console.log('heeeeeeeeeeeeee')
    fetch(`/plants.json`)
    .then((res) => res.json())
    .then(plants => {
      $('button#show-again-button').hide()
      plants.forEach((plant) => {
        let newPlant = new Plant(plant)
        let plantHtml = newPlant.formatIndex()
        $('#show-plants-again').append(plantHtml)
    })
    console.log('Index is loaded again...')
  }) 
  })
}


  <div id='show-actions'>
        <div class="action-grid">
          <div id="action"></div>
          <div id="action-date"></div>
        </div>
        <button data-id="${this.id}" id="action-button">View actions</button>
      </div>